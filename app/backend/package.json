{
  "name": "ordersapp-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Simple WhatsApp bot using Baileys",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "drizzle:generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "pull": "npx drizzle-kit pull",
    "generate-migration": "npx drizzle-kit generate --custom --name",
    "reset": "docker compose down -v && docker compose up -d && drizzle-kit migrate",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@google/genai": "^1.37.0",
    "@langchain/core": "^1.1.15",
    "@langchain/langgraph": "^1.1.0",
    "@sinclair/typebox": "^0.34.48",
    "baileys": "^7.0.0-rc.9",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.7.1",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.17.2",
    "pino-pretty": "^13.1.3",
    "qrcode-terminal": "^0.12.0",
    "zod": "^4.3.6"
  }
}
